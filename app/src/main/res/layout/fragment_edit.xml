<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/noteParent"
        tools:context=".fragments.EditFragment">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:id="@+id/toolBarNote">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:paddingTop="@dimen/_5sdp"
                android:paddingEnd="@dimen/_5sdp"
                android:paddingStart="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_round_arrow_back_24"
                android:id="@+id/btnBack" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/lasteEdited"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:ellipsize="end"
                android:fontFamily="@font/google_sans_regular"
                android:padding="@dimen/_5sdp"
                android:paddingStart="@dimen/_13sdp"
                android:paddingTop="@dimen/_5sdp"
                android:paddingEnd="@dimen/_13sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:text="Edited On"
                android:background="@drawable/date_rounded"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:paddingBottom="@dimen/_5sdp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_baseline_save_24"
                android:layout_marginEnd="@dimen/_15sdp"
                app:tint="@color/black"
                android:id="@+id/saveNote" />

        </RelativeLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/bottomBar"
            android:layout_below="@id/toolBarNote">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/scrollView"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:background="@null"
                        android:id="@+id/etTitle"
                        android:inputType="none"
                        android:textSize="@dimen/_22ssp"
                        android:importantForAutofill="no"
                        android:fontFamily="@font/google_sans_medium"
                        android:hint="Note Title" />

                    <com.yahiaangelo.markdownedittext.MarkdownEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_22sdp"
                        android:layout_marginEnd="@dimen/_22sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@null"
                        android:fontFamily="@font/google_sans_regular"
                        android:hint="Note"
                        android:importantForAutofill="no"
                        android:inputType="none"
                        android:padding="@dimen/_10sdp"
                        android:textSize="@dimen/_16ssp"
                        android:id="@+id/noteContent" />
                </LinearLayout>


            </androidx.core.widget.NestedScrollView>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fabColorPick"
                android:layout_margin="@dimen/_15sdp"
                android:layout_gravity="bottom|end"
                android:src="@drawable/ic_baseline_color_lens_24"
                app:backgroundTint="@color/purple" />


        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:id="@+id/bottomBar"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/_5sdp"
            android:visibility="gone"
            android:layout_alignParentBottom="true">

            <com.yahiaangelo.markdownedittext.MarkdownStylesBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/styleBar"
                android:layout_margin="@dimen/_10sdp"
                android:elevation="@dimen/_5sdp"
                android:padding="0dp" />
        </LinearLayout>

    </RelativeLayout>
</layout>